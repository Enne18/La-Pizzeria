<!DOCTYPE html>
<html lang="it">

<head>
  <title>La Pizzeria</title>
  <link rel="shortcut icon" type="image/x-icon" href="/images/LogoPizzeria.png" />

  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <!-- Personal CSS -->
  <link rel=stylesheet type="text/css" href="/stylesheets/style.css">
  <!-- Riferimento font -->
  <link href="https://fonts.googleapis.com/css?family=BioRhyme" rel="stylesheet">
  <!-- Personal JS
  <script deref src="/public/js/templates/nav-templates.js"></script>-->
    <script defer src="/javascripts/logout.js"></script>
</head>

<body>
  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
    integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
    crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
    integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
    crossorigin="anonymous"></script>

  <!-- Header -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
    <!-- Logo -->
    <a href="/" class="d-flex align-items-center">
      <img src="/images/LogoPizzeria.png" alt="La Pizzeria" height="70px">
    </a>
    <h1 id="TitoloPrincipale" class="ml-3 mb-0">La Pizzeria</h1>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto text-center">
        <li class="nav-item">
          <a class="nav-link" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/restaurants">Pizzerie</a>
        </li>
        <li class="nav-item">
          <% if(!auth || user.proprietario != 0) { %>
            <a class="nav-link" href="#" data-toggle="modal" data-target="#modalReservedAreaForm">Area riservata</a>
          <% } else { %> 
            <a class="nav-link" href="/reserved-area">Area riservata</a>
          <% } %>
        </li>
        <% if (!auth) { %>
          <li class="nav-item">
            <div class="text-center">
              <button href="" class="btn btn-default" data-toggle="modal" data-target="#modalLoginForm">
                <a>ACCEDI</a>
              </button>
            </div>
          </li>
          <% } else { %>
            <li class="nav-item">
              <div class="text-center">
                <button href="" class="btn btn-default">
                  <a id="logout">LOG OUT</a>
                </button>
              </div>
            </li>
            <% } %>
      </ul>
    </div>
  </nav>

  <!-- Form di login preso in parte da Bootstrap -->
  <div class="modal fade" id="modalLoginForm" tabindex="-1" role="dialog" aria-hidden="true" aria-labelledby="myModalLabel"
    aria-hidden="true">
    <form method="POST" action="/sessions">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header text-center">
            <h4 class="modal-title w-100 font-weight-bold">Sign in</h4>
          </div>
          <div class="modal-body mx-3">
            <div class="md-form mb-5">
              <label data-error="wrong" data-success="right" for="defaultForm-email">Email</label>
              <input type="email" id="defaultForm-email" class="form-control validate" name="username" required>
            </div>

            <div class="md-form mb-4">
              <label data-error="wrong" data-success="right" for="defaultForm-pass">Password</label>
              <input type="password" id="defaultForm-pass" class="form-control validate" name="password" required>
            </div>

            <!-- Riferimento per il form di Registrazione utente -->
            <a href="#" data-toggle="modal" data-target="#modalRegisterForm">Non sei registrato?</a>

          </div>
          <div class="modal-footer d-flex justify-content-center">
            <button type="submit" class="btn btn-primary"><a>Login</a></button>
          </div>
        </div>
      </div>
    </form>
  </div>

  <!-- Form di registrazione preso in parte da Bootstrap -->
  <div class="modal fade" id="modalRegisterForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    aria-hidden="true">
    <form method="post" action="/signup">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header text-center">
            <h4 class="modal-title w-100 font-weight-bold">Sign up</h4>
          </div>
          <div class="modal-body mx-3">

            <div class="md-form mb-5">
              <label data-error="wrong" data-success="right" for="defaultForm-name">Nome utente</label>
              <input type="name" name="name" id="defaultForm-email" class="form-control validate" required>
            </div>

            <div class="md-form mb-5">
              <label data-error="wrong" data-success="right" for="defaultForm-email">Email</label>
              <input type="email" name="email" id="defaultForm-email" class="form-control validate" required>
            </div>

            <div class="md-form mb-4">
              <label data-error="wrong" data-success="right" for="defaultForm-pass">Password</label>
              <input type="password" name="password" id="defaultForm-pass" class="form-control validate" required>
            </div>


          </div>
          <div class="modal-footer d-flex justify-content-center">
            <button type="submit" class="btn btn-primary"><a>Sign up</a></button>
          </div>
        </div>
      </div>
    </form>

  </div>

  <!-- Form di accesso all'area riservata -->
  <div class="modal fade" id="modalReservedAreaForm" tabindex="-1" role="dialog" aria-labelledby="modalReservedAreaForm"
    aria-hidden="true">
    <form method="post" action="/sessions">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header text-center">
            <h4 class="modal-title w-100 font-weight-bold">Accesso all'area riservata</h4>
          </div>
          <div class="modal-body mx-3">
            <div class="md-form mb-5">
              <label data-error="wrong" data-success="right" for="defaultForm-email">Email</label>
              <input type="email" id="defaultForm-email" class="form-control validate" name="username" required>
            </div>

            <div class="md-form mb-4">
              <label data-error="wrong" data-success="right" for="defaultForm-pass">Password</label>
              <input type="password" id="defaultForm-pass" class="form-control validate" name="password" required>
            </div>

          </div>
          <div class="modal-footer d-flex justify-content-center">
            <button type="submit" class="btn btn-primary"><a>Accedi</a></button>
          </div>
        </div>
      </div>
    </form>
  </div>

  <main class="below-nav">
    <% if (message) { %>
      <script> alert("<%=message %>"); </script>
        <% } %>