<%- include('headerIndex') %>

    <div class="row justify-content-center bordato">
        <div class="col-md-6" id="cardRestaurantBG">
            <form method="post" action="/reserved-area/<%= pizzeria.ID_Pizzeria %>">
                <!-- ... Altri campi di informazioni sulla pizzeria ... -->

                <!-- Menu -->
                <div class="container">
                    <div class="row">
                      <div class="col">
                        <h3>Menu</h3>
                      </div>
                      <div class="col">
                        <button class="btn btn-primary btn-success" type="submit"><a>Aggiungi Pizza</a></button>
                      </div>
                      <div class="col">
                        <button class="btn btn-primary btn-danger" type="submit"><a>Rimuovi Pizza</a></button>
                      </div>
                    </div>
                  </div>

                <hr>
                <% pizzas.forEach((pizza, pizzeria)=> { %>
                    <% if (pizza.ID_Pizzeria==pizzeria.ID_Pizzeria && pizza.PizzaNome !==null) { %>

                        <div class="pizza-fields">
                            <div class="form-group">
                                <label>Nome della Pizza:</label>
                                <input type="text" class="form-control" value="<%= pizza.PizzaNome %>" name="Nome">
                            </div>
                            <div class="form-group">
                                <label>Ingredienti:</label>
                                <input type="text" class="form-control" value="<%= pizza.Ingredienti %>"
                                    name="Ingredienti">
                            </div>
                            <div class="form-group">
                                <label>Prezzo in Euro:</label>
                                <input type="number" class="form-control" value="<%= pizza.Prezzo %>" name="Prezzo">
                            </div>
                        </div>

                        <% }}); %>


            </form>
            <br>
        </div>
    </div>
    <%- include('footer') %>