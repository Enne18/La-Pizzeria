  <!-- Form di ricerca e Filtro -->
  <div class="main-content">
    <div class="row">
      <div class="col-md-1 offset-md-1"></div>
      <div class="col-md-6">
        <form class="form-inline d-flex justify-content-start mt-3">
          <div class="form-group mr-3">
            <select id="city-filter">
              <option value="">Select city</option>
            </select>

            <button id="filter-button">Filter</button>
          </div>
          <div class="form-group mr-3">
            <select class="form-control" name="tipo">
              <option value="">Tutti i tipi</option>
              <option value="ConsumazioneSulPosto">Consumazione sul posto</option>
              <option value="RitiroEsterno">Ritiro all'esterno</option>
              <option value="ConsegnaADomicilio">Consegna a domicilio</option>
            </select>
          </div>

          <div class="search-wrapper">
            <input type="search" id="search" placeholder="Cerca...">
          </div>
        </form>
      </div>
    </div>
  </div>


  <% pizzerias.forEach((pizzeria)=> { %>
